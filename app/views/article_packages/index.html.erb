<h1 id="article_packages_header">Listing Article packages!</h1>

<% @article_packages.each do |article_package| %>
  <div class="article_packages">
    <ul>
      <li><%= article_package.article_package_number %></li>
      <li><%= article_package.title %></li>
      <li><%= article_package.description %></li>
      <li><%= article_package.price %></li>
    </ul>
    <div>
      <% counter=0 %>
      <% article_package.pictures.each do |picture| %>
        <% counter +=1 %>
        <div id="<%= article_package.article_package_number %>_image_<%= counter %>" class="article_packages_image"><%= image_tag picture.image.url(:thumb) %></div>
      <% end %>
    </div>
    <div id="article_packages_buttons">
      <%= link_to 'Show', article_package, :class => 'btn' %>
      <%= link_to 'Edit', edit_article_package_path(article_package), :class => 'btn btn-primary' %>
      <%= link_to 'Destroy', article_package, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="article_packages_image_original"></div>

<br>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Number</th>
      <th>Title</th>
      <th class="description_field">Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @article_packages.each do |article_package| %>    
      <tr>
        <td><%= image_tag article_package.pictures.first.image.url(:thumb) %></td>        
        <td><%= article_package.article_package_number %></td>
        <td><%= article_package.title %></td>
        <td><%= article_package.description %></td>
        <td><%= article_package.price %></td>
        <td>
          <%= link_to 'Show', article_package %>
          <%= link_to 'Edit', edit_article_package_path(article_package) %>
          <%= link_to 'Destroy', article_package, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

